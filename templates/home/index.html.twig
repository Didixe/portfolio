                        </div>
                        <div class="champ">
                            {{ form_widget(form.message, {'attr': {'class': 'input input-width'}}) }}
                        </div>
                    </div>

                    <button class="btn btn-outline-primary btn-lg center btn-contact" type="submit">Envoyer</button>
