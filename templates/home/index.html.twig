                    </div>
                    <div class="form-group">
                        <div class="input" >
                            {{ form_label(form.Email) }}
                        </div>
                        <div class="champ">
                            {{ form_widget(form.Email, {'attr': {'class': 'input input-width'}}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input" >
